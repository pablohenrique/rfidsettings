<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtTagName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tagname"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txtWifi"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/wifi"
        android:textSize="23px" />

    <CheckBox
        android:id="@+id/chkWifi"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/chkwifi" />

    <TextView
        android:id="@+id/txt3g"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/gg"
        android:textSize="23px" />

    <CheckBox
        android:id="@+id/chk3g"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/chk3g" />

    <TextView
        android:id="@+id/txtVib"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/vib"
        android:textSize="23px" />

    <CheckBox
        android:id="@+id/chkVib"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/chkVib" />

    <TextView
        android:id="@+id/txtVolume"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/volume"
        android:textSize="23px" />

    <CheckBox
        android:id="@+id/chkVolume"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/chkVolume" />

    <TextView
        android:id="@+id/txtBlueTooth"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/bluetooth"
        android:textSize="23px" />

    <CheckBox
        android:id="@+id/chkBlueTooth"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/chkBlueTooth" />

    <Button
        android:id="@+id/btnGravar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnGravar" />

</LinearLayout>
