    -->

    <ToggleButton
        android:id="@+id/toggleVolume"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toggleBluetooth"
        android:layout_alignLeft="@+id/toggleWifi"
        android:layout_marginBottom="33dp"
        android:text="@string/toggle"
        android:textOff="Volume Off"
        android:textOn="Volume On" />

    <ToggleButton
        android:id="@+id/toggleBluetooth"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/toggleVolume"
        android:layout_centerVertical="true"
        android:text="@string/toggle"
        android:textOff="Bluetooth Off"
        android:textOn="Bluetooth On" />

    <ToggleButton
        android:id="@+id/toggleWifi"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toggleVolume"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:text="@string/toggle"
        android:textOff="Wifi Off"
        android:textOn="Wifi On" />

    <ToggleButton
        android:id="@+id/toggleButton4"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/toggleBluetooth"
        android:layout_below="@+id/toggleBluetooth"
        android:layout_marginTop="30dp"
        android:text="@string/toggle"
        android:textOff="Vibrate Off"
        android:textOn="Vibrate On" />

</RelativeLayout>